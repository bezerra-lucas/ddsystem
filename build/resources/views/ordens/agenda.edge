@section('main')
  <div class="row">
    <div class="col s4">
      <h4>TÃ©cnicos</h4>
      <ul class="technicians">        
        @each(technician in technicians)
        <li class="indigo darken-1">{{technician.name}}</li>
        @endeach
      </ul>
